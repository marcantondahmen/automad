{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"checkJs": false,
		"moduleResolution": "node",
		"noImplicitAny": true,
		"preserveConstEnums": false,
		"resolveJsonModule": true,
		"target": "es6",
		"outDir": "dist",
		"paths": {
			"@/*": ["./automad/src/client/*"]
		}
	},
	"exclude": ["node_modules", "automad/dist", "packages"]
}
