{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"checkJs": false,
		"noImplicitAny": true,
		"preserveConstEnums": false,
		"resolveJsonModule": true,
		"target": "es2020",
		"module": "esnext",
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"outDir": "dist",
		"paths": {
			"@/*": ["./automad/src/client/*"]
		}
	},
	"exclude": ["node_modules", "automad/dist", "packages"]
}
